import random
import string 
import secrets

letters = string.ascii_letters
digits = string.digits
special_characters = string.punctuation
alphanorm = letters + digits
alphaspec = letters + digits + special_characters



def get_password_amount():
    while True:
        amount = input("How many passwords do you need?: ")
        if amount.isdigit():
            amount = int(amount)
            if amount > 0:
                break
            else:
                 print("Input must be a number")
            print(amount) 
    
        return amount

def get_password_length():
    while True:
        length = input("Please enter a length between 1 and 18 characters long: ")
        if length.isdigit():
            length = int(length)
            if length > 1 and length < 18:
                break
            else:
                print("Please enter a number 1-18:")
            print(length)
            
        return length

